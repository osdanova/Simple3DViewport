<UserControl x:Class="Simple3DViewport.Controls.Simple3DViewport_Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Simple3DViewport.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="#222222"
             MouseWheel="Viewport_MouseWheel"
             MouseMove="Viewport_MouseMove"
             MouseRightButtonDown="Viewport_MouseRightButtonDown"
             MouseRightButtonUp="Viewport_MouseRightButtonUp">
        
        <!--<ContentControl x:Name="viewportFrame"/>-->
        <Viewport3D x:Name="viewportFrame"/>
    </Grid>
    

</UserControl>
